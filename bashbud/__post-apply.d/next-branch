projectdir="$1"

if [[ -d "$projectdir/next" ]]; then

  cp -f -t "$projectdir/next"                 \
           "$projectdir/README.md"            \
           "$projectdir/LICENSE"              \
           "$projectdir/Makefile"             \
           "$projectdir/${projectdir##*/}.1"  \
           "$projectdir/genmonifypop.sh"      \


  cp -f "$projectdir/program.sh"              \
        "$projectdir/next/${projectdir##*/}"
fi
